<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="2022-10-12-crear-tabla-empresa-domicilios-telefonos" author="carlos.garnica@pelisat.com.mx">
        <!-- This part will hold the catalogos tables -->
        <createTable tableName="empresas_domicilios_telefonos">
            <column name="ID" type="int"></column>
            <column name="UUID" type="varchar(12)"></column>
            <column name="DOMICILIO" type="int"></column>
            <column name="TIPO_TELEFONO" type="VARCHAR(30)"></column>
            <column name="TELEFONO" type="VARCHAR(20)"></column>
            <column name="ELIMINADO" type="bit" defaultValue="0"></column>
            <column name="FECHA_CREACION" type="datetime" defaultValueComputed="NOW()"></column>
            <column name="CREADO_POR" type="int"></column>
            <column name="FECHA_ACTUALIZACION" type="datetime" defaultValueComputed="NOW()"></column>
            <column name="ACTUALIZADO_POR" type="int"></column>
        </createTable>

        <!-- Adding the primary key and the autoincrement -->
        <addPrimaryKey tableName="empresas_domicilios_telefonos" columnNames="ID" />
        <addAutoIncrement tableName="empresas_domicilios_telefonos" columnName="ID" columnDataType="int" startWith="1" incrementBy="1"/>

        <!-- Setting the unique constraints -->
        <addUniqueConstraint tableName="empresas_domicilios_telefonos" columnNames="UUID" />
    </changeSet>
</databaseChangeLog>