<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="2021-10-29-crear-tabla-empresas-escrituras-representantes" author="carlos.garnica@pelisat.com.mx">
        <!-- This part will hold the catalogos tables -->
        <createTable tableName="empresas_escrituras_representantes">
            <column name="ID" type="int"></column>
            <column name="UUID" type="varchar(12)"></column>
            <column name="ESCRITURA" type="INT"></column>
            <column name="NOMBRES" type="VARCHAR(60)"></column>
            <column name="APELLIDOS" type="VARCHAR(60)"></column>
            <column name="SEXO" type="VARCHAR(10)"></column>
            <column name="ELIMINADO" type="bit" defaultValue="0"></column>
            <column name="FECHA_CREACION" type="datetime" defaultValueComputed="NOW()"></column>
            <column name="CREADO_POR" type="int"></column>
            <column name="FECHA_ACTUALIZACION" type="datetime" defaultValueComputed="NOW()"></column>
            <column name="ACTUALIZADO_POR" type="int"></column>
        </createTable>

        <!-- Adding the primary key and the autoincrement -->
        <addPrimaryKey tableName="empresas_escrituras_representantes" columnNames="ID" />
        <addAutoIncrement tableName="empresas_escrituras_representantes" columnName="ID" columnDataType="int" startWith="1" incrementBy="1"/>

        <!-- Setting the unique constraints -->
        <addUniqueConstraint tableName="empresas_escrituras_representantes" columnNames="UUID" />

        <!-- Setting the relationship -->
        <addForeignKeyConstraint baseTableName="empresas_escrituras_representantes" baseColumnNames="ESCRITURA" constraintName="FK_empresas_escrituras_representantes_ESCRITURAS" referencedTableName="empresas_escrituras"
                                 referencedColumnNames="ID" />
    </changeSet>
</databaseChangeLog>