<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="2022-07-27-crear-tabla-empresa-equipos-movimientos" author="carlos.garnica@pelisat.com.mx">
        <!-- This part will hold the catalogos tables -->
        <createTable tableName="empresas_equipos_movimientos">
            <column name="ID" type="int"></column>
            <column name="UUID" type="varchar(12)"></column>
            <column name="EMPRESA_EQUIPO" type="int"></column>
            <column name="ALTAS" type="int"></column>
            <column name="BAJAS" type="int"></column>
            <column name="CANTIDAD_ACTUAL" type="int"></column>
            <column name="OBSERVACIONES" type="VARCHAR(255)"></column>
            <column name="ELIMINADO" type="bit" defaultValue="0"></column>
            <column name="FECHA_CREACION" type="datetime" defaultValueComputed="NOW()"></column>
            <column name="CREADO_POR" type="int"></column>
            <column name="FECHA_ACTUALIZACION" type="datetime" defaultValueComputed="NOW()"></column>
            <column name="ACTUALIZADO_POR" type="int"></column>
        </createTable>

        <!-- Adding the primary key and the autoincrement -->
        <addPrimaryKey tableName="empresas_equipos_movimientos" columnNames="ID" />
        <addAutoIncrement tableName="empresas_equipos_movimientos" columnName="ID" columnDataType="int" startWith="1" incrementBy="1"/>

        <!-- Setting the unique constraints -->
        <addUniqueConstraint tableName="empresas_equipos_movimientos" columnNames="UUID" />
    </changeSet>
</databaseChangeLog>